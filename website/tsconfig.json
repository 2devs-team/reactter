{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["**/dist/**", "**/__coverage__/**"],
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "preserve",
    "importHelpers": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}